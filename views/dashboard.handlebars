<div class="form-group show" id='container-3'>
    <div class="card">
        <h1 class='card-header'>Families</h1>
        <div id='ul-container-3'>
            <ul class='list-group'>
                {{#each family as |child| }}
                <li class="list-group-item justify-content-between align-items-center list-group-item-action">
                    <div class="col">
                        <h2>
                            Child:{{child.firstName}} {{child.lastName}} Birthday:{{format_date child.birthdate}}
                        </h2>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

</div>