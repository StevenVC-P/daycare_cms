<div class="container">
    <div class="form-group show">
        <div class="card">
            <h1 class='card-header'>Child Profile</h1>
            <button class="btn btn-sm btn-primary" id="updateChild" data-id="{{child.id}}">UPDATE</button>

            <div class="row">
                <div class="col" id='ul-container-3'>
                    <div class="col-4" id='ul-container-4'></div>
                    <h3>Child Info:</h3>

                    <div class="input-group">
                        <span class="input-group-text">First Name:</span>
                        <textarea class="form-control" id="familyChildEdit-first" aria-label="First Name"></textarea>

                        <span class="input-group-text">Last Name:</span>
                        <textarea class="form-control" id="familyChildEdit-last" aria-label="Last Name"></textarea>
                    </div>
                    <div class="input-group">
                        <span class="input-group-text">Birthdate:</span>
                        <textarea class="form-control" id="familyChildEdit-birth" aria-label="Birthdate"></textarea>


                        <label for="exampleFormControlSelect1">Age Group</label>
                        <select class="form-control" id="familyChildEdit-billing">
                            <option>infant</option>
                            <option>toddler</option>
                            <option>preschooler</option>
                        </select>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</div>